---
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';
import { getPublishedPosts, listTags } from '../../lib/blog';

const posts = await getPublishedPosts();
const tags = listTags(posts);
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={`标签 | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			.tag-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
				gap: 0.8rem;
			}
			.tag-grid a {
				text-decoration: none;
				color: inherit;
			}
			.tag-grid h2 {
				margin-bottom: 0.4rem;
				font-size: 1.1rem;
			}
			.tag-grid p {
				margin: 0;
				color: var(--ink-soft);
				font-size: 0.9rem;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1>标签总览</h1>
				<p>按主题快速回看相同问题域的文章。</p>
				<div class="tag-grid">
					{
						tags.map((item) => (
							<a href={`/tags/${item.tag}/`} class="card">
								<h2>#{item.tag}</h2>
								<p>{item.count} 篇文章</p>
							</a>
						))
					}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
