---
import { NAV_LINKS, SITE_TITLE, SOCIAL_LINKS } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2 class="brand"><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			{
				NAV_LINKS.map((link) => (
					<HeaderLink href={link.href}>{link.label}</HeaderLink>
				))
			}
		</div>
		<div class="social-links">
			{
				SOCIAL_LINKS.map((link) => (
					<a href={link.href} target={link.href.startsWith('http') ? '_blank' : undefined}>
						{link.label}
					</a>
				))
			}
		</div>
	</nav>
</header>
<style>
	header {
		padding: 0.85rem 1.25rem;
		border-bottom: 1px solid var(--line);
		backdrop-filter: blur(12px);
		background: color-mix(in oklab, var(--bg-1), transparent 15%);
	}
	h2,
	h2 a {
		margin: 0;
		font-size: 1rem;
		font-weight: 700;
		letter-spacing: 0.02em;
		text-decoration: none;
		color: var(--ink-0);
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
		max-width: 1120px;
		margin: 0 auto;
	}
	.internal-links {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		flex-wrap: wrap;
	}
	nav a {
		padding: 0.45rem 0.65rem;
		border-radius: 999px;
		color: var(--ink-1);
		border: 1px solid transparent;
		text-decoration: none;
		font-size: 0.88rem;
		line-height: 1;
	}
	nav a.active {
		border-color: color-mix(in oklab, var(--accent), white 70%);
		color: var(--accent);
		background: color-mix(in oklab, var(--accent), white 90%);
	}
	.social-links {
		display: flex;
		align-items: center;
		gap: 0.3rem;
	}
	@media (max-width: 720px) {
		header {
			padding-inline: 0.8rem;
		}
		.brand {
			display: none;
		}
		.social-links {
			display: none;
		}
	}
</style>
