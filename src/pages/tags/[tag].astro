---
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';
import { getPublishedPosts, listTags, type BlogPost } from '../../lib/blog';

export async function getStaticPaths() {
	const posts = await getPublishedPosts();
	const tags = listTags(posts);

	return tags.map(({ tag }) => ({
		params: { tag },
		props: {
			tag,
			posts: posts.filter((post) => post.data.tags.includes(tag)),
		},
	}));
}

interface Props {
	tag: string;
	posts: BlogPost[];
}

const { tag, posts } = Astro.props as Props;
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={`#${tag} | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1>标签 #{tag}</h1>
				<p>{posts.length} 篇文章</p>
				<ul class="post-list">
					{
						posts.map((post) => (
							<li class="card">
								<a href={`/blog/${post.id}/`}>
									<h2>{post.data.title}</h2>
									<p>{post.data.description}</p>
									<div class="meta-line">
										<FormattedDate date={post.data.pubDate} />
										<span class="chip" data-kind="accent">{post.data.difficulty}</span>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.post-list {
		padding: 0;
		list-style: none;
		display: grid;
		gap: 0.8rem;
	}
	.post-list a {
		color: inherit;
		text-decoration: none;
	}
	.post-list h2 {
		font-size: 1.25rem;
		margin-bottom: 0.45rem;
	}
	.post-list p {
		color: var(--ink-soft);
		margin-bottom: 0.75rem;
	}
</style>
