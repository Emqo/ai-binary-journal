---
import { SITE_AUTHOR, SITE_TITLE, SOCIAL_LINKS } from '../consts';
const today = new Date();
---

<footer>
	<p>&copy; {today.getFullYear()} {SITE_AUTHOR}. {SITE_TITLE}.</p>
	<div class="social-links">
		{
			SOCIAL_LINKS.map((link) => (
				<a href={link.href} target={link.href.startsWith('http') ? '_blank' : undefined}>{link.label}</a>
			))
		}
	</div>
</footer>
<style>
	footer {
		padding: 3rem 1rem 4rem;
		color: var(--ink-soft);
		text-align: center;
	}
	p {
		margin: 0;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 0.6rem;
		margin-top: 0.9rem;
	}
	.social-links a {
		text-decoration: none;
		color: var(--ink-soft);
		padding: 0.35rem 0.65rem;
		border-radius: 999px;
		border: 1px solid var(--line);
		font-size: 0.8rem;
	}
</style>
